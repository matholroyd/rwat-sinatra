%html
  %head
    %link{:href=>"/stylesheets/screen.css", :media=>"screen, projection", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"/scss/main.css", :media=>"screen, projection", :rel=>"stylesheet", :type=>"text/css"}
    %script{:type=>"text/javascript", :src=>"/javascript/jquery-1.7.1.min.js"}
    %script{:type=>"text/javascript", :src=>"/javascript/application.js"}
  %body 
    .container.prepend-4.span-12.append-4.last
      %header#header
        %p Ruby Webapp Tutorial
        %h1 Sinatra
      %nav#nav
        = link_to "<< home", "/"
        .info
          %p 
            Request was
            %code= "#{request.request_method} #{request.path}"
          %p 
            Params were:
            %code= params.inspect
          %h3
            Note: this is using the 
            %code layout.haml
            file

      #main= yield
      %footer#footer
        %hr
        Mat Holroyd &copy; 
        = Date.today.year
